{
    "compilerOptions": {
        "jsx": "react-jsx",
        "target": "es2017",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "outDir": "dir",
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "removeComments": true,
        "noEmitOnError": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "lib": [
            "dom",
            "esnext",
            "dom.iterable"
        ],
    },
    "types": [
        "reflect-metadata",
        "jest",
        "@testing-library/jest-dom"
    ],
    "exclude": [
        "node_modules",
    ],
    "include": [
        "src/**/*",
        "declare.d.ts"
    ],
    "typeRoots": [
        "../node_modules/@types"
    ]
}